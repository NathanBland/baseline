# API Environment Variables
# Copy this to .env and customize as needed

# Database Configuration (for local development)
# Use localhost for local dev, postgres for Docker containers
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/baseline"

# Redis Configuration (for local development)
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# API Server Configuration
API_PORT=3001
NODE_ENV=development

# Lucia Auth Configuration
# Add your OAuth provider credentials here
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret
# OIDC Configuration (KeyCloak or other OIDC providers)
# OIDC_CLIENT_ID=your-oidc-client-id
# OIDC_CLIENT_SECRET=your-oidc-client-secret
# OIDC_ISSUER_URL=https://your-keycloak-domain.com/realms/your-realm
# OIDC_REDIRECT_URI=http://localhost:3000/auth/oidc/callback
# UI_URL=http://localhost:5173

# Development/Debug
DEBUG=false
LOG_LEVEL=info
